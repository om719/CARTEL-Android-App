<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/star1bg"
    tools:context=".CartelIndie">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/slideViewPager"
        android:layout_width="match_parent"
        android:layout_height="569dp">


    </androidx.viewpager.widget.ViewPager>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CARTEL \nINDIE"
        android:textSize="30sp"
        android:fontFamily="@font/star_jedi_lala"
        android:textColor="@android:color/holo_orange_dark"
        android:textAlignment="center"/>


    <Button
        android:id="@+id/buy"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slideViewPager"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="56dp"
        android:background="@android:color/holo_orange_light"
        android:text="BUY CARTEL INDIe FOR \u20B9 100" />

</RelativeLayout>